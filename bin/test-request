#!/usr/bin/env bash

: ${HOST:=http://localhost}
: ${PORT:=42151}
: ${PUDDING_AUTH_TOKEN:=swordfish}

case "$1" in
  instance-build)
    exec curl \
      -s \
      -H "Authorization: token ${PUDDING_AUTH_TOKEN}" \
      -X POST \
      -d "{
          \"instance_builds\": {
          \"count\": 1,
          \"site\": \"org\",
          \"env\": \"test\",
          \"queue\": \"docker\",
          \"instance_type\": \"c3.4xlarge\"
        }
      }" \
      ${HOST}:${PORT}/instance-builds
    ;;
  list-instances)
    exec curl \
      -s \
      -H "Authorization: token ${PUDDING_AUTH_TOKEN}" \
      ${HOST}:${PORT}/instances
    ;;
  terminate-instance)
    if [[ ! $2 ]] ; then
      echo "missing instance id"
      exit 1
    fi
    exec curl \
      -s \
      -H "Authorization: token ${PUDDING_AUTH_TOKEN}" \
      -X DELETE \
      ${HOST}:${PORT}/instances/$2
    ;;
  bogus-instance-build)
    exec curl \
      -s \
      -H "Authorization: token ${PUDDING_AUTH_TOKEN}" \
      -X POST \
      -d "{\"instance_builds\": {}}" \
      ${HOST}:${PORT}/instance-builds
    ;;
  shutdown)
    exec curl \
      -s \
      -H "Authorization: token ${PUDDING_AUTH_TOKEN}" \
      -X DELETE \
      ${HOST}:${PORT}/
    ;;
  kaboom)
    exec curl \
      -s \
      -H "Authorization: token ${PUDDING_AUTH_TOKEN}" \
      -X POST \
      ${HOST}:${PORT}/kaboom
    ;;
  expvars)
    exec curl \
      -s \
      -H "Authorization: token ${PUDDING_AUTH_TOKEN}" \
      ${HOST}:${PORT}/debug/vars
    ;;
  *)
    echo "unknown request type '$1'"
    exit 1
    ;;
esac
